{
  "productName":"API伴侣",
  "copyright":"Shanghai Huisheng Internet Technology Co., Ltd.",
  "directories": {
    "output": "build"
  },
  "extraResources":[
    {
      "from":"./db/",
      "to": "db"
    },
    {
      "from":"./public/images/",
      "to": "images"
    }
  ],
  "nsis": {
    "oneClick": false,
    "perMachine":false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./public/images/apiLogo.ico",
    "uninstallerIcon": "./public/images/apiLogo.ico",
    "installerHeaderIcon": "./public/images/apiLogo.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "API伴侣"
  },

  "win": {
    "icon": "./public/images/apiLogo.ico",
    "requestedExecutionLevel": "requireAdministrator"
  },

  "linux": {
    "icon": "./public/images/apiLogo.ico"
  },

  "mac": {
    "icon": "./public/images/apiLogo.ico"
  }
}